---
interface Props {
    title: string;
    description: string;
    image?: string;
}

const { title, description, image = '/blog-placeholder.jpg' } = Astro.props;
---

<!-- Global Metadata -->
<meta charset='utf-8' />
<meta name='viewport' content='width=device-width,initial-scale=1' />
<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
<meta name='generator' content={Astro.generator} />

<!-- Font preloads -->
<link
    rel='preload'
    href='/fonts/berkeley-mono-regular.ttf'
    as='font'
    type='font/ttf'
    crossorigin
/>
<link
    rel='preload'
    href='/fonts/universlt-55-roman.otf'
    as='font'
    type='font/otf'
    crossorigin
/>
<link
    rel='preload'
    href='/fonts/universlt-65-bold.ttf'
    as='font'
    type='font/ttf'
    crossorigin
/>
<link
    rel='preload'
    href='/fonts/universlt-75-black.otf'
    as='font'
    type='font/otf'
    crossorigin
/>
<link
    rel='preload'
    href='/fonts/universlt-85-xblack.otf'
    as='font'
    type='font/otf'
    crossorigin
/>

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name='title' content={title} />
<meta name='description' content={description} />

<!-- Open Graph -->
<meta property='og:type' content='website' />
<meta property='og:url' content={Astro.url} />
<meta property='og:title' content={title} />
<meta property='og:description' content={description} />
<meta property='og:image' content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta property='twitter:card' content='summary_large_image' />
<meta property='twitter:url' content={Astro.url} />
<meta property='twitter:title' content={title} />
<meta property='twitter:description' content={description} />
<meta property='twitter:image' content={new URL(image, Astro.url)} />
