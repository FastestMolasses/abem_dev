---
import '@/styles/globals.css';
import '@/styles/grid.css';
import '@/styles/fonts.css';

import Layout from '@/layouts/Layout.astro';
import Game2D from '@/components/home/Game2D';
import CodeEdit from '@/components/home/CodeEdit';
import GameEngine from '@/components/home/GameEngine';
import ProjectBox from '@/components/home/FastAPIBox';
import GithubStats from '@/components/home/GithubStats';
---

<Layout>
    <div class='grid'>
        <!-- CodeEdit -->
        <div class='rectangle double-wide double-tall max-h-80'>
            <CodeEdit />
        </div>
        <!-- Github stats -->
        <div class='rectangle single-wide single-tall min-h-[180px]'>
            <GithubStats />
        </div>
        <!-- FastAPI -->
        <div class='rectangle single-wide single-tall'>
            <ProjectBox
                title='Fastest FastAPI'
                imageUrl='fastapi_box.avif'
            />
        </div>
        <!-- 2D game -->
        <div class='rectangle single-wide single-tall'>
            <Game2D />
        </div>
        <!-- Game engine -->
        <div class='rectangle double-wide single-tall'>
            <GameEngine />
        </div>
        <!-- Tauri -->
        <div class='rectangle double-wide single-tall'></div>
        <!-- Eth Balance Server -->
        <div class='rectangle single-wide single-tall'></div>
        <!-- Crypto Exchange -->
        <div class='rectangle full-wide double-tall'></div>
    </div>
</Layout>
